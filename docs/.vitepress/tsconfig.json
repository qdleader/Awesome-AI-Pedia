{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInInFileNames": true
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["../dist", "../cache"]
}